# Example environment variables for Slackbot Lambda deployment
# Copy this file to .env and fill in your values

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_APP_ID=your-app-id-here

# Claude Configuration
CLAUDE_API_KEY=your-claude-api-key-here

# Deployment Configuration
S3_BUCKET=my-slackbot-sessions
WORK_DIRECTORY=/tmp/claude-sessions
DYNAMODB_TABLE=slackbot-sessions

# Pulumi Configuration
PULUMI_ACCESS_TOKEN=your-pulumi-access-token-here
PULUMI_STACK_NAME=dev

# Optional: Channel Whitelist (comma-separated channel IDs)
CHANNEL_WHITELIST=C1234567890,C0987654321

# Optional: Debug Mode
DEBUG=true